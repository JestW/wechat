/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.inputView{
  width:100%;
  margin: 5px 0;
  line-height: 40px;
  background-color: #fff;
  display: flex;
  align-content: space-around;
}

.inputView input{
  height: 40px;
  width: calc(100% - 40px);
}

.loginClassStyle{
  font-size: 16px;
}
.inputLabel{
  width: 80px;
  text-align: justify;
  height: 40px;
}
.inputLabel .span{
    display: inline-block /* Opera */; 
		padding-left: 100%;
    height: 40px;
    line-height: 0;
    width: 0;
}
.inputViewButton{
  width:100%;
}