  </view>
  <view class="inputView">
    <label class="inputLabel">密码：<view class="span"></view></label>
    <input placeholder-class="loginClassStyle" placeholder='请输入密码' type='text'></input>
  </view>
  <view class="inputViewButton">
    <button bindtap="loginSuccess">登陆</button>
  </view>
