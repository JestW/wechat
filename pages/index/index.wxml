<view class="container">
  <view class="inputView">
    <label class="inputLabel">公司码：<view class="span"></view></label>
    <input placeholder-class="loginClassStyle" bindinput="bindCorpCode" placeholder='请输入公司码' type='text' focus maxlength="4"></input>
  </view>
  <view class="inputView">
    <label class="inputLabel">用户名：<view class="span"></view></label>
